<% @title = t('views.attachments.delete.title') %>

<%= render :partial => 'contribution', :object => @attachment.contribution %>

<p><%= raw t 'views.attachments.delete.question', :filename => "<strong>#{@attachment.file.original_filename}</strong>" %></p>

<%- if @attachment.image? %>
  <div class="attachment-thumb"><%= image_tag @attachment.file.url(:preview) %></div>
<%- end %>

<p><%= t('views.common.permanent') %></p>

<%= semantic_form_for [ @attachment.contribution, @attachment ], :html => { :method => :delete } do |form| %>
  <%= form.buttons do %>
    <%= redirect_field %>
    <%= form.commit_button :label => t('formtastic.actions.attachment.delete') %>
    <%= form_cancel_link @attachment.contribution %>
  <% end %>
<% end %>


