<%= semantic_form_for contact, :as => :contact, :url => contact_path(contact), :html => { :multipart => true} do |form| %>
  <%= render :partial => 'form_fields', :locals => { :form => form } %>
  <%= form.buttons do %>
    <%= redirect_field %>
    <%= form.commit_button %>
    <%= form_cancel_link (contact.new_record? ? home_path : contact) %>
  <% end %>
<% end %>

