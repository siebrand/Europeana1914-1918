<%= semantic_form_for contribution, :url => submit_contribution_path(contribution) do |form| %>

  <%=
    form.inputs :submit,
    :id => 'submit',
    :class => @submit_class,
    :input_html => { :style => @submit_wrapper_style } do
  %>
    
    <p><%= raw t('views.contributions.digital_object.help_text.submit_contribution2') %></p>
    
    <%= form.buttons do %>
      <%=
        form.commit_button :label => t('formtastic.actions.contribution.submit'),
        :button_html => {
          :confirm => t('views.contributions.show.button_confirm')
        }
      %>
    <%- end %>
    
  <% end %>
  
<%- end %>
