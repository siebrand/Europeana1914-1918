<% @title = t('views.contributions.delete.title') %>

<p><%= raw t 'views.contributions.delete.question', :title => contribution_title(@contribution) %></p>

<p><%= t 'views.common.permanent' %></p>

<%= semantic_form_for @contribution, :html => { :method => :delete } do |form| %>
  <%= form.buttons do %>
    <%= redirect_field %>
    <%= form.commit_button :label => t('formtastic.actions.contribution.delete') %>
    <%= form_cancel_link @contribution %>
  <% end %>
<% end %>

