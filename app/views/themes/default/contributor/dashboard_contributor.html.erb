<% @title = t('views.contributor.dashboard_contributor.title') %>

  <p><%= t('views.contributor.index.p1') %></p>
  <ol class="number">
    <li><%= t('views.contributor.index.item1') %></li>
    <li><%= t('views.contributor.index.item2') %></li>
    <li><%= t('views.contributor.index.item3') %></li>
    <li><%= t('views.contributor.index.item4') %></li>
    <li><%= raw t('views.contributor.help.how_to_use.item5') %></li>
  </ol>
  
  
  
  <div class="link-buttons">
    <%= link_to t('views.contributor.dashboard_contributor.links.new'), new_contribution_path %>
  </div>
  
  
  
  <h2><%= t('views.contributor.dashboard_contributor.headings.contributions') %></h2>

    <% if @total > 0 %>
      <p><%= t('views.contributor.dashboard_contributor.p1') %></p>

      <%- @contributions.each_pair do |set, contributions| -%>
      
        <%- if contributions.present? -%>
          <%= render :partial => 'contributions', :object => contributions, :locals => { :caption => t("views.contributions.status.#{set.to_s}") } %>
        <%- end -%>
        
      <%- end -%>

    <% else %>
      
      <p><%= t('views.contributor.dashboard_contributor.empty.all') %></p>
      
    <% end %>
