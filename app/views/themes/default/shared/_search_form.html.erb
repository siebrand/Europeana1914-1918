<%
if local_assigns[:url].nil?
  url = search_contributions_path 
end
%>
<%= form_tag( url, { :method => :get, :class => 'search' } ) do %>
  <div>
    <%= text_field_tag 'q', query, { :size => 30 } %> <%= submit_tag t('formtastic.actions.search.submit'), :name => nil %>
  </div>
<% end %>
