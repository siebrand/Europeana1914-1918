<% @title = t('views.admin.config.edit.title') %>
<div class="section top">
  
  <h2><%= @title %></h2>
  
  <%= semantic_form_for(@config, :as => :settings, :url => admin_config_path, :html => { :method => 'put' }) do |form| %>
    <%= form.inputs :settings do %>
      <%= form.input :site_name, :label => I18n.t('settings.site_name'), :hint => I18n.t('formtastic.hints.settings.site_name') %>
      <%= form.input :site_url, :label => I18n.t('settings.site_url'), :hint => I18n.t('formtastic.hints.settings.site_url') %>
      <%= form.input :registration_required, :as => :boolean, :include_blank => false, :label => I18n.t('settings.registration_required'), :hint => I18n.t('formtastic.hints.settings.registration_required') %>
      <%= form.input :publish_contributions, :as => :boolean, :include_blank => false, :label => I18n.t('settings.publish_contributions'), :hint => I18n.t('formtastic.hints.settings.publish_contributions') %>
      <%= form.input :contribution_approval_required, :as => :boolean, :include_blank => false, :label => I18n.t('settings.contribution_approval_required'), :hint => I18n.t('formtastic.hints.settings.contribution_approval_required') %>
      <%= form.input :max_upload_size, :label => I18n.t('settings.max_upload_size'), :hint => I18n.t('formtastic.hints.settings.max_upload_size') %>
      <%= form.input :allowed_upload_extensions, :label => I18n.t('settings.allowed_upload_extensions'), :hint => I18n.t('formtastic.hints.settings.allowed_upload_extensions') %>
      <%= form.input :search_engine, :as => :select, :required => true, :collection => [ "active_record", "solr", "sphinx" ], :label => I18n.t('settings.search_engine') %>
      <%= form.input :gmap_api_key, :label => I18n.t('settings.gmap_api_key'), :hint => I18n.t('formtastic.hints.settings.gmap_api_key') %>
      <%= form.input :google_analytics_key, :label => I18n.t('settings.google_analytics_key'), :hint => I18n.t('formtastic.hints.settings.google_analytics_key') %>
      <%= form.input :google_api_email, :label => I18n.t('settings.google_api_email'), :hint => I18n.t('formtastic.hints.settings.google_api_email') %>
      <%= form.input :bing_translate_key, :label => I18n.t('settings.bing_translate_key'), :hint => I18n.t('formtastic.hints.settings.bing_translate_key') %>
    <%= form.input :bing_client_id, :label => I18n.t('settings.bing_client_id'), :hint => I18n.t('formtastic.hints.settings.bing_client_id') %>
    <%= form.input :bing_client_secret, :label => I18n.t('settings.bing_client_secret'), :hint => I18n.t('formtastic.hints.settings.bing_client_secret') %>
      <%= form.input :sharethis_id, :label => I18n.t('settings.sharethis_id'), :hint => I18n.t('formtastic.hints.settings.sharethis_id') %>
      <%= form.input :uploadify, :as => :boolean, :include_blank => false, :label => I18n.t('settings.uploadify'), :hint => I18n.t('formtastic.hints.settings.uploadify') %>
      <%= form.input :ui_locales, :as => :check_boxes, :label => I18n.t('settings.ui_locales'), :hint => I18n.t('formtastic.hints.settings.ui_locales'), :collection => ui_locales_collection %>
      <%= form.input :banner_active, :as => :boolean, :include_blank => false, :label => I18n.t('settings.banner_active'), :hint => I18n.t('formtastic.hints.settings.banner_active') %>
      <%= form.input :banner_text, :as => :text, :label => I18n.t('settings.banner_text'), :hint => I18n.t('formtastic.hints.settings.banner_text') %>
    <% end %>
    
    <%= form.buttons do %>
      <%= redirect_field %>
      <%= form.commit_button %>
      <%= form_cancel_link admin_config_path %>
    <% end %>
  <% end %>

</div>
