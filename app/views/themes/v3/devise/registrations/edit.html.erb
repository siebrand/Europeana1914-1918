<% @title = t('views.devise.registrations.edit.title') %>
<div class="section top">
  
  <h2><%= @title %></h2>
  
    <% if @user.errors.present? %>
      <% flash.now[:alert] = t("flash.users.update.alert") %>
    <% end %>
    
    <%= semantic_form_for @user, :url => user_registration_path, :html => { :method => :put, :class => 'devise', :multipart => true } do |form| -%>
      <%= form.inputs :user_current_password do %>
        <%= form.input :current_password, :required => true %>
      <% end %>
      <%= form.inputs :user_registration do %>
        <%= form.input :username %>
        <%= form.input :email %>
        <%= form.input :password %>
        <%= form.input :password_confirmation %>
      <% end %>
      <%= form.buttons do %>
        <%= redirect_field %>
        <%= form.commit_button %>
        <%= form_cancel_link user_registration_path %>
      <% end %>
    <% end -%>
  
</div>