<%
  if local_assigns[:url].nil?
    url = search_contributions_path 
  end
  
  if local_assigns[:count].nil?
    count = false
  end
%>


<div class="carousel-intro <%= mobile ? 'small' : 'big' %> ">



	<div class='content'>

		<h4><%= (docTitle).inner_html %></h4>
	
		<span class="hide-on-phones">
			<%= raw((doc).to_html ) %>
		</span>

		
		<%= form_tag( url, { :method => :get, :id => 'search', :class =>  current_page?(home_path) ? 'landing' : ''  }) do %>
			<div class="h-flex-container">

			  <input id="q" name="q" placeholder="Search" type="text" class="h-flex-fill" autocomplete="off" role="textbox" aria-autocomplete="list">
              
              <span class="h-flex-fixed">
                <input type="submit" value="<%= t('formtastic.actions.search.submit') %>"/>
              </span>
            </div>
			
			
		<% end %>
		
		
		
		<div class='index-call-to-action'>
			<a href='<%= current_user.role.name == 'guest' ? contributor_dashboard_path : new_contribution_path %>' class='button'><%= t('common.links.add-your-story') %></a><a href='<%= page_path('explore') %>' class='button'><%= t('common.links.explore-the-stories') %></a>
		</div>

		
	</div>		
	
</div>